{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__fixtures__",
    "**/*.spec.*",
    "examples"
  ]
}